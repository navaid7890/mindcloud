files:
    "/etc/php.d/z99uploadsize.ini":
        mode: "000644"
        owner: root
        group: root
        content: |
            upload_max_filesize = 1000M
            post_max_size = 1000M
            max_execution_time = 1000
commands:
    remove_old_ini:
        command: "rm -f /etc/php.d/z99uploadsize.ini.bak"